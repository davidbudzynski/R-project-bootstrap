# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 80
quote_type = double

[*.md]
trim_trailing_whitespace = false
indent_size = 1
max_line_length = off
indent_style = space

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_size = 4
indent_style = tab

